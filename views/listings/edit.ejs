<% layout("layouts/boilerplate")%>

<div class="row mt-3">
    <div class="col-8 offset-2" >
 <h1>Edit Page</h1>
    <form method="post" action="/listing/edit/data/<%=list._id%>" class="mt-3">
        <div class="mb-3">
        <label for="Title" class="form-label"   ><b>Title</b></label>
        <input type="text" name="Title" class="form-control"  value="<%=list.title%>" >
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label"><b>Description</b></label>
        <textarea name="Description" id="" cols="10" rows="6" placeholder="Write Description Here" class="form-control"><%=list.description%></textarea>
    </div>
    <div class="row ">
    <div class="mb-3 col-md-4">
        <label for="Price"class="form-label"><b>Price</b></label>
        <input type="number" name="Price" id=""class="form-control" value="<%=list.price%>" >
    </div>
    <div class="mb-3 col-md-8">
        <label for="Location"class="form-label"><b>Location</b></label>
        <input type="text" name="Location" id=""class="form-control" value="<%=list.location%>" >
    </div>
    </div>
    <div class="mb-3">
        <label for="Country"class="form-label"><b>Country</b></label>
        <input type="text" name="Country" id=""class="form-control" value="<%=list.country%>">
    </div>
    <div>
        <button class="btn btn-dark add-btn">Submit</button>
     
    </div>
    <br>
    </form>
</div>
</div>